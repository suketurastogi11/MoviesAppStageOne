<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.suketurastogi.moviesappstageone.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:textSize="@dimen/movie_title_text_size"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/movie_image_view_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:gravity="center" />

            <TextView
                android:id="@+id/movie_synopsis_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="@string/movie_synopsis_title_text"
                android:textSize="@dimen/movie_synopsis_title_text_size" />

            <TextView
                android:id="@+id/movie_synopsis_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="@dimen/movie_synopsis_content_text_size" />

            <TextView
                android:id="@+id/movie_rating_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="@dimen/movie_rating_content_text_size" />

            <TextView
                android:id="@+id/movie_release_date_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="@dimen/movie_release_date_content_text_size" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
